@{
}

<h1>Members Index Page</h1>

<a class="btn btn-success"
    asp-controller="Members"
    asp-action="Add">Add Member</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Active</th>
            <th>&nbsp;</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var member in ViewBag.Members)
        {
            <tr style="background-color:@(member.Active ? "lightgreen" : "white")">
                <td>
                    <a 
                        asp-area="" 
                        asp-controller="Members" 
                        asp-action="Detail" 
                        asp-route-id="@member.Id">@member.Id</a>
                </td>
                <td>@member.Name</td>
                <td>@member.Email</td>
                <td>@(member.Active ? "Active" : "Inactive")</td>

                <td>
                    <a class="btn btn-primary"
                       asp-controller="Members"
                       asp-action="Update"
                       asp-route-id="@member.Id">Edit</a>
                    <a class="btn btn-danger"
                        asp-controller="Members"
                        asp-action="Delete"
                        asp-route-id="@member.Id"
                    >Delete</a>

                </td>
            </tr>
        }


    </tbody>
</table>